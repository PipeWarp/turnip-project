{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean run",
            "type": "shell",
            "command": "echo done",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "make clean",
                "make debug",
                "run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make debug",
            "type": "shell",
            "command": "make",
            "args": [
                "DEBUG=1"
            ],
            "problemMatcher": []
        },
        {
            "label": "make release",
            "type": "shell",
            "command": "make",
            "args": [
                "DEBUG=0"
            ],
            "problemMatcher": []
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "isBackground": true,
            "command": "/usr/games/desmume",
            "args": [
                "${workspaceFolder}/${workspaceFolderBasename}.nds"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": [
                "make debug"
            ],
            "isBackground": false,
            "command": "/usr/games/desmume",
            "args": [
                "--arm9gdb=20000",
                "${workspaceFolder}/${workspaceFolderBasename}.nds"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "stop-emulation",
            "type": "shell",
            "command": "killall",
            "args": [
                "-KILL",
                "desmume"
            ],
            "problemMatcher": []
        }
    ]
}