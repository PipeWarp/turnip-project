{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and run",
            "type": "shell",
            "command": "echo done",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "make run",
                "run desmume"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make run",
            "type": "shell",
            "command": "make",
            "problemMatcher": []
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "run desmume",
            "type": "shell",
            "isBackground": true,
            "command": "/usr/games/desmume",
            "args": [
                "${workspaceFolder}/dist/${workspaceFolderBasename}.nds"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": [
                "make debug"
            ],
            "isBackground": false,
            "command": "/usr/games/desmume",
            "args": [
                "--arm9gdb=20000",
                "${workspaceFolder}/dist/${workspaceFolderBasename}.nds"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "stop-emulation",
            "type": "shell",
            "command": "killall",
            "args": [
                "-KILL",
                "desmume"
            ],
            "problemMatcher": []
        }
    ]
}